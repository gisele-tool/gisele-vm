#!/usr/bin/env ruby
begin
  require 'worklist'
rescue LoadError => ex
  $:.unshift File.expand_path('../../lib', __FILE__)
  require 'worklist'
end

process_file = Path.pwd/'rxth.gis'

require 'gisele/vm/command'
command = Gisele::VM::Command.new
command.parse_options %w{--drb-server --interactive --storage=sqlite://vm.db}

vm = command.vm(process_file)

vm.register(agent = Worklist::Agent.new(process_file))
vm.event_manager = Gisele::VM::EventManager.new{|event|
  agent.event(event)
}

trap('INT'){
  vm.info "Interrupt on user request (graceful shutdown)."
  vm.stop
}
vm.run